<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/trackitem_cover_img"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/no_cover"

        android:background="@drawable/rounded_corners_cover"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trackitem_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_name_txtV"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/trackitem_cover_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trackitem_track_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artist_name_txtV"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/trackitem_cover_img"
        app:layout_constraintTop_toBottomOf="@+id/trackitem_track_name" />

</androidx.constraintlayout.widget.ConstraintLayout>